<Window x:Class="TDefragWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600" MinWidth="600" MinHeight="400">
    <Grid Width="Auto" Visibility="Visible" ShowGridLines="False" Background="SlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="32" />
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <TextBlock Height="Auto" HorizontalAlignment="Stretch" Name="defragLog" Text="" VerticalAlignment="Stretch" Width="Auto" Background="White" Grid.Row="2" Padding="0" Margin="4,0" />
        <ToolBar Height="30" Name="toolBar1" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" MinHeight="30" Padding="0" HorizontalContentAlignment="Left" Background="SlateGray" Foreground="White" OverridesDefaultStyle="False">
            <ComboBox Height="20" HorizontalAlignment="Left" Name="diskArray" VerticalAlignment="Center" Width="151" Margin="0,0,0,0" />
            <Button Content="Start Defrag" Height="23" HorizontalAlignment="Right" Margin="0,0,0,0" Name="button1" VerticalAlignment="Center" Width="75" Click="button1_Click" Foreground="White" />
        </ToolBar>
        <Menu Grid.RowSpan="1" Height="23" HorizontalAlignment="Stretch" Margin="0" Name="menu1" VerticalAlignment="Center" Width="Auto" Padding="0">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="SlateGray" Offset="1" />
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="File">
                <MenuItem Command="ApplicationCommands.Close" Header="Exit" IsEnabled="True" />
            </MenuItem>
            <MenuItem Header="Command">
                <MenuItem Command="" Header="Start Defrag" />
            </MenuItem>
        </Menu>
        <StatusBar Grid.Row="3" Height="23" HorizontalAlignment="Stretch" Margin="0" Name="statusBar1" VerticalAlignment="Center" Width="Auto">
            <StatusBar.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="SlateGray" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </StatusBar.Background>
        </StatusBar>
    </Grid>
</Window>
