<Window x:Class="TDefragWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600" MinWidth="600" MinHeight="400" Background="#FF293955" OverridesDefaultStyle="False">
    <Grid Width="Auto" Visibility="Visible" ShowGridLines="False" Background="#FF293955">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="70" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Menu Grid.RowSpan="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="menu1" VerticalAlignment="Center" Width="Auto" Padding="0" Background="#FFADB9CD">
            <MenuItem Header="File">
                <MenuItem Command="ApplicationCommands.Close" Header="Exit" IsEnabled="True" />
            </MenuItem>
            <MenuItem Header="Command">
                <MenuItem Command="" Header="Start Defrag" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" MinHeight="30" MinWidth="100" Background="#FFADB9CD" Margin="0">
            <ToolBar Height="30" Name="toolBar1" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" MinHeight="30" Padding="0" HorizontalContentAlignment="Left" Background="#FFBCC7D8" Foreground="White" OverridesDefaultStyle="False">
                <ComboBox Height="20" HorizontalAlignment="Left" Name="diskArray" VerticalAlignment="Center" Width="151" Margin="0,0,0,0" />
                <Button Content="Start Defrag" Height="23" HorizontalAlignment="Right" Margin="0,0,0,0" Name="button1" VerticalAlignment="Center" Width="75" Click="startDefrag" Foreground="Black" />
            </ToolBar>
        </Grid>
        <Grid Grid.Row="2" HorizontalAlignment="Stretch" MinHeight="100" MinWidth="100" Background="#FF293955" Margin="0">
            <Image Height="Auto" HorizontalAlignment="Stretch" Margin="1,1,1,0" Name="image1" Stretch="Fill" VerticalAlignment="Stretch" Width="Auto" Source="/TDefragWPF;component/Images/Tusvob-logo.png" StretchDirection="Both" Grid.Row="2" />
        </Grid>
        <Grid Grid.Row="3" HorizontalAlignment="Stretch" MinHeight="40" MinWidth="100" Background="#FF293955" Margin="0">
            <TextBlock Name="defragLog" Text="" Background="White" Padding="0" Margin="1,1,1,0" ClipToBounds="False" Grid.Row="3" />
        </Grid>
        <StatusBar Grid.Row="4" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="statusBar1" VerticalAlignment="Stretch" Width="Auto" Background="#FF293955"></StatusBar>
    </Grid>
</Window>
